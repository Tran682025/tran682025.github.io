<body>
  <h1>BOLERO DEMO 1 - "Mưa Đêm Tỉnh Nhỏ"</h1>
  <p>Phiên bản số hóa bài nhạc Bolero dành cho Pioneer</p>

  <div class="controls">
    <button onclick="playAll()">Phát nhạc</button>
    <button onclick="pauseAll()">Dừng</button>
    <button onclick="toggleDrum()">Tắt/Bật Trống</button>
  </div>

  <div id="chord-display">Hợp âm: Chưa bắt đầu...</div>

  <audio id="drum" src="drum_loop.wav" loop></audio>
  <audio id="piano" src="piano.mid" loop></audio>

  <script>
    const drum = document.getElementById("drum");
    const piano = document.getElementById("piano");
    const chords = [
      "Am", "Dm", "G", "C", "F", "E7", "Am", "Am"
    ];
    let chordIndex = 0;
    let chordInterval;
    let drumMuted = false;

    function playAll() {
      drum.play();
      piano.play();
      chordIndex = 0;
      document.getElementById("chord-display").innerText = "Hợp âm: " + chords[chordIndex];
      chordInterval = setInterval(() => {
        chordIndex = (chordIndex + 1) % chords.length;
        document.getElementById("chord-display").innerText = "Hợp âm: " + chords[chordIndex];
      }, 4000);
    }

    function pauseAll() {
      drum.pause();
      piano.pause();
      clearInterval(chordInterval);
      document.getElementById("chord-display").innerText = "Hợp âm: Đã dừng.";
    }

    function toggleDrum() {
      if (drumMuted) {
        drum.volume = 1;
        drumMuted = false;
      } else {
        drum.volume = 0;
        drumMuted = true;
      }
    }
  </script>
</body>
